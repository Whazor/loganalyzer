!!!
%html{:lang => 'en'}
  %head
    %meta{:charset => 'UTF-8'}/
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}/

    %title Log analyzer

    %link{:rel => 'stylesheet', :href => 'css/bootstrap.css'}
    %link{:rel => 'stylesheet', :href => 'css/style.css'}
  %body
    .container
      %h1 Log analyzer

      .dropbox
        Drop access log here!

      .filter
        %form.well.form-inline
          %input.input-medium.search-query{type: "text", style: 'width: 600px;margin-right: 20px', placeholder: "Zoeken"}
          %label.checkbox{ style: 'margin-right: 20px'}
            %input.googlebot{type: 'checkbox', style: 'margin-right:5px'}
            Googlebot filter
          %button.btn.render
            %i.icon.icon-refresh
            %span Renderen

      .files
      %script#file{type: "text/template"}
        .file
          %h2 <%= name %>
          .chart
        %hr/

    %script{:src=>'/js/libs/jquery-1.7.2.min.js'}
    %script{:src=>'/js/libs/underscore-1.3.1.min.js'}
    %script{:src=>'/js/libs/backbone-0.9.2.min.js'}
    %script{:src=>'/js/libs/d3.v2.min.js'}
    %script{:src=>'/js/application.js'}
